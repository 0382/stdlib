PROG = test_ascii
OBJS = test_ascii.o

CPPFLAGS = -I../..
LDFLAGS = -L../.. -lstdlib

.PHONY: all clean test
.SUFFIXES: $(SUFFIXES) .f90 .o

all: $(PROG)

$(PROG): $(OBJS)
	$(FC) $(FCFLAGS) $(CPPFLAGS) -o $@ $(OBJS) $(LDFLAGS)

test:
	./$(PROG)

clean:
	$(RM) $(PROG) $(OBJS) *.mod

%.o: %.f90
	$(FC) $(FCFLAGS) $(CPPFLAGS) -c $<
